@page "/"
<PageTitle>Home</PageTitle>

<div class="container">
    @* Título *@
    <div class="card shadow-lg">
        <div class="card-header text-white text-center">
            <div class="bg-primary rounded">
                <h1>Registros web</h1>
            </div>
        </div>

        @* Cuerpo con tarjetas simplificadas *@
        <div class="card-body">
            <h3 class="text-center">Creado por el estudiante Steven</h3>
            <p class="text-center">Tarea de Programaci&oacute;n Aplicada I</p>

            <div class="d-flex flex-wrap gap-2">
                @foreach (var registro in Registros)
                {
                    <Card Color="CardColor.Primary" Class="mb-2 rounded flex-grow-1">
                        <CardHeader>
                            <CardTitle class="text-start">@registro.Titulo</CardTitle>
                        </CardHeader>
                        <CardBody>
                            <Button Color="ButtonColor.Light" To="@registro.Ruta" Type="ButtonType.Link" Class="w-100">
                                <span class="@registro.Icono fs-4 align-items-center d-flex justify-content-center" aria-hidden="true"></span>
                                Ir a @registro.Titulo
                            </Button>
                        </CardBody>
                    </Card>
                }
            </div>
        </div>
    </div>
</div>

@code {
    // Lista de registros con sus detalles
    private List<Registro> Registros = new List<Registro>
    {
        new Registro
        {
            Titulo = "Técnicos",
            Icono = "bi bi-person-fill-gear",
            Ruta = "/Tecnico/Index"
        },
        new Registro
        {
            Titulo = "Clientes",
            Icono = "bi bi-person-vcard-fill",
            Ruta = "/Cliente/Index"
        },
        new Registro
        {
            Titulo = "Ciudades",
            Icono = "bi bi-buildings-fill",
            Ruta = "/Ciudad/Index"
        },
        new Registro
        {
            Titulo = "Tickets",
            Icono = "bi bi-ticket-perforated-fill",
            Ruta = "/Ticket/Index"
        },
        new Registro
        {
            Titulo = "Sistemas",
            Icono = "bi bi-display-fill",
            Ruta = "/Sistema/Index"
        }
    };

    // Clase para representar un registro
    private class Registro
    {
        public string Titulo { get; set; }
        public string Icono { get; set; }
        public string Ruta { get; set; }
    }
}